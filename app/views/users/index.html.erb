<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">

  　<div class="row">
    　<div class="col-md-3">
  　　<%= render 'layouts/user_info', user: @user, book: @book %>
　　　</div>

 　　　<div class="col-md-8 offset-md-1">
　　　　<h1>Users</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td></td>
              <td><%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
                <%end%>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
        　　<% end %>
        　</tbody>
      　</table>
　　　</div>
　　</div>
　</div>
</main>
